<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <!--<ImageView
            android:id="@+id/conning"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:src="@drawable/compass_navi"
            android:scaleType="center"/>-->

        <!--<com.zaaach.toprightmenudemo.view.ScanView
            android:id="@+id/scan_view"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"/>-->


        <com.zaaach.toprightmenudemo.view.RadarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/radar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:circleColor="#565cd6"
            app:circleNum="4"
            app:flicker="3"
            app:speed="5"
            app:sweepColor="#565cd6"
            app:showCross="true"
            android:background="@color/colorPrimary"
            app:raindropNum="4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:id="@+id/infogroup"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gpsinfo"
                    android:layout_width="200dp"
                    android:layout_height="78dp"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    >
                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_menu_share"
                        android:scaleType="center"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/infogroup"
                android:gravity="left"
                android:textColor="@color/address"
                android:textSize="13sp"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title"
        android:layout_marginTop="100dp"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="正在等待GPS校准"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:gravity="right"
                        android:src="@drawable/gps_no_signal"/>
                </LinearLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="已发现卫星数量：40颗"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="已校准：0颗"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="148dp"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none" >
            <com.zaaach.toprightmenudemo.alipay.MyGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="0.0dip"
                android:listSelector="@null"
                android:numColumns="3"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0.0dip" />
        </ScrollView>
    </LinearLayout>
</FrameLayout>