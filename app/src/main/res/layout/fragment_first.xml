<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:orientation="horizontal">

        <!--<ImageView
            android:id="@+id/conning"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:src="@drawable/compass_navi"
            android:scaleType="center"/>-->

        <!--<com.zaaach.toprightmenudemo.view.ScanView
            android:id="@+id/scan_view"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"/>-->


        <com.zaaach.toprightmenudemo.view.RadarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/radar"
            android:layout_width="148dp"
            android:layout_height="148dp"
            app:circleColor="#565cd6"
            app:circleNum="4"
            app:flicker="3"
            app:speed="5"
            app:sweepColor="#565cd6"
            app:showCross="true"
            android:background="@color/colorPrimary"
            app:raindropNum="4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:id="@+id/infogroup"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gpsinfo"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_menu_share"
                    android:scaleType="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/infogroup"
                android:gravity="center"
                android:textSize="18sp"/>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>